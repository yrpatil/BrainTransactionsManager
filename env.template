# BrainTransactionsManager v2.0.0 Environment Variables
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development

# Database Configuration (for development, these can be left empty to use defaults)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=braintransactions
DB_USER=
DB_PASSWORD=
DB_SCHEMA=laxmiyantra

# Alpaca API (required for trading - get from alpaca.markets)
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Trading Configuration
PAPER_TRADING=true
PAPER_TRADING_CAPITAL=100000.0
MAX_POSITION_SIZE_PERCENT=10.0

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_RATE_LIMIT=1000

# Monitoring
PRICE_POLL_INTERVAL=60
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_DB=false

# Server Configuration
HOST=127.0.0.1
PORT=8000
RELOAD=false
